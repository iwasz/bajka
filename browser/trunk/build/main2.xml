<beans>
  <import resource="standard.xml" />

  <Config id="config" viewportWidth="800" viewportHeight="600" autoProjection="true" windowCaption="Bajka browser, F5 to refresh" model="@scene" />

  <Group id="scene">
    <ClearScreenGrid set-as="view" color="6b6b6bff" gridColor="616161ff" density="20" />

    <Group set-as="child" translate="300, 200">
      <circle set-as="child" origin="50, 0" />
      <label set-as="child" view.text="Hello world" translate="-50, -50" />
      <image set-as="child" path="cursor.png" />
    </Group>

    <RelativeGroup set-as="child" translate="-50, -50" width="50" height="50">
      <image set-as="child" view.bitmap.path="cursor.png">
        <RelativeGroupProperties set-as="groupProps" translate="50, 50" hAlign="2" vAlign="2" />
      </image>
    </RelativeGroup>
    
