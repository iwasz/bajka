<?xml version="1.0" encoding="UTF-8"?>
<beans>
  <Group id="scene">
    <GLESWidget set-as="view" init-method="init">
        <value set-as="vertex">
        attribute vec4 vPosition;
        
        void main ()
        {                 
                gl_Position = vPosition; 
        }
        </value>
        
        <value set-as="fragment">
        void main ()
        {
                gl_FragColor = vec4 (1.0, 0.0, 0.0, 1.0);
        }
        </value>
    </GLESWidget>
  </Group>
</beans>
