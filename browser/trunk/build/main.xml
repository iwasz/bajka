<?xml version="1.0" encoding="UTF-8"?>

<!-- 
* Guzik z napisem.
** -Czcionki TTF.
* Przełączanie widoków (link podłaczony do tego guzika).
* Obsługa F5 i Esc.
* Obsługa eventów z klawiatury w ogóle.
* -Bitmapa.

Dodatkowe:
~~~~~~~~~~
* Layouty
** -Poprawne AABB.
** -Poprawne wyświetlanie AABB.
 -->

<beans>
  <import resource="standard.xml" />

  <Config id="config" viewportWidth="800" viewportHeight="600" autoProjection="true" windowCaption="Bajka browser, F5 to refresh" model="@scene" />

  <Group id="scene">
    <ClearScreenGrid set-as="view" color="6b6b6bff" gridColor="616161ff" density="20" />

    <Group add-to="children" translate="300, 200">
      <circle add-to="children" origin="50, 0" />
      <label add-to="children" view.text="Hello world" translate="-50, -50" />
      <image add-to="children" view.bitmap.path="cursor.png" />
    </Group>

    <BoxGroup add-to="children" width="100" height="100" translate="-50, -50">
      <image add-to="children" view.bitmap.path="cursor.png">
        <BoxGroupProperties set-as="groupProps" translate="50, 50" width="75" height="75" align="0x24" />
      </image>
    </BoxGroup>
  </Group>

</beans>
