<?xml version="1.0" encoding="UTF-8"?>
<beans>
  <RelativeGroup id="scene">
    <LayerProperties set-as="groupProps" fillW="true" fillH="true" />
    <ClearScreen set-as="view" color="5aa3fcff" />

    <loopImage set-as="child" view.bitmap="@grass" width="1300" height="300">
      <RelativeGroupProperties set-as="groupProps" translate="0, 0" hAlign="right" vAlign="top"/>
    </loopImage>

    <image set-as="child" path="swinia.png">
      <RelativeGroupProperties set-as="groupProps" translate="50, 35" hAlign="center" vAlign="center"/>
    </image>    

    <loopImage set-as="child" view.bitmap="@grass" width="1300" height="300">
      <RelativeGroupProperties set-as="groupProps" translate="-10, -10" hAlign="right" vAlign="top"/>
    </loopImage>

    <image set-as="child" path="sunny.png">
      <RelativeGroupProperties set-as="groupProps" translate="90, 85" hAlign="center" vAlign="center"/>
    </image>    

    <image set-as="child" view.bitmap="@cloud" translate="50, 500"/>
    <image set-as="child" view.bitmap="@cloud" translate="550, 550" scale="0.7"/>
        
    <imgButton set-as="child" path="left.png" file="menu.xml" name="scene">
      <RelativeGroupProperties set-as="groupProps" translate="5, 50" hAlign="center" vAlign="center"/>
    </imgButton>

    <imgButton set-as="child" path="right.png" file="menu.xml" name="scene">
      <RelativeGroupProperties set-as="groupProps" translate="95, 50" hAlign="center" vAlign="center"/>
    </imgButton>
    
  </RelativeGroup>
  
  <Bitmap id="cloud" path="cloud.png"/>
  <Bitmap id="grass" path="grass.png"/>
  
</beans>

